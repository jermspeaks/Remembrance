<div class="new-memorial-form">
  <%= form_for @memorial, url: {action: "create"}, role: "form" do |f| %>
    <div class="form-group">
      <%= f.label :deceased_name, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_field :deceased_name, class: "form-control", placeholder: "Enter Name" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date_of_birth, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.date_field :date_of_birth, class: "form-control",placeholder: "Date of Birth" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date_of_death, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.date_field :date_of_death, class: "form-control", placeholder: "Date of Passing" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :obituary_description, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :obituary_description, class: "form-control", placeholder: "Obituary Description" %><br>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :service_description, class: "col-sm-3 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :service_description, class: "form-control", placeholder: "Service Description" %><br>
      </div>
    </div>
    <br>
    <div class="col-sm-2">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <i class="icon-ok icon-white"></i> Submit
      <% end %>
    </div>
  <% end %>
</div>

